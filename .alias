# unixy
alias fname="find / -name $1 2>/dev/null"
alias l="ls -AFl"
alias ll="ls -AFGl"
alias ln="ln -v"
alias tjf="tar -jxvf"
alias tlf="tail -f"
alias top="top -o cpu -O vsize"
alias tzf="tar -zxvf"

# mac-y
alias e="vim"
alias vim="/usr/local/bin/mvim -v"

# rails
alias rs="rails server"
alias rc="rails console"

# rake
alias rT="rake -T"
alias rdm="rake db:migrate db:test:prepare"
alias rdmp="rake db:migrate db:test:prepare parallel:prepare"
alias rj="rake jasmine"
alias rjc="rake jasmine:ci"
alias rps="rake parallel:spec"

# git
alias gb="git branch --color"
alias gbc="git branch --no-color | sed -e '/^[^*]/d' -e 's/^* //'" # git branch current
alias gc="git checkout"
alias gd="git diff --color"
alias gds="gd --staged"
alias gl="git lg"
alias gm="git mergetool"
alias gp="git pull"
alias gpr="git pull --rebase"
alias gpx="gp && gitx"
alias gq="git push"
alias gs="git status"
alias gtree="git log --oneline --decorate --graph"
alias guf="git fetch upstream && git pull && git checkout master && git rebase upstream/master" # git update fork

# bundle
alias bindle="bundle install"

# rspec
alias rspec="rspec -c"

# dev-y
alias ack="ack --ignore-dir=pkg"
alias deploy_heroku="rspec && git push heroku master"
alias start_postgres="pg_ctl -D /usr/local/var/postgres -l /usr/local/var/postgres/server.log start"
