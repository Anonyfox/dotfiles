[user]
	name = Alexander
	email = alxndr+github@gmail.com

[core]
	editor = /usr/bin/vim
	excludesfile = ~/.gitignore

[alias]
	b = branch
	ci = commit
	cm = commit
	co = checkout
	di = diff
	unadd = reset HEAD
	st = status

[color]
	ui = true

[color "branch"]
	current = yellow reverse
	local = yellow 
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

