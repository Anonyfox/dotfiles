[user]
  name = Alexander
  email = alxndr+github@gmail.com

[core]
  editor = /usr/local/bin/mvim -v
  excludesfile = ~/.gitignore

[alias]
  b = branch
  ci = commit
  cm = commit
  co = checkout
  di = diff
  unadd = reset HEAD
  st = status

[branch]
  autosetupmerge = true
[branch "master"]
  remote = <nickname>
  merge = <remote-ref>
  rebase = true

[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  keepBackup = false;
  tool = p4merge
[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false

