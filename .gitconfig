[user]
  name = Alexander
  email = alxndr+github@gmail.com

[core]
  editor = /usr/local/bin/mvim -v
  excludesfile = ~/.gitignore

[alias]
  amend = !git add . && git commit --amend -aCHEAD
  b = branch
  br = branch
  branch-name = rev-parse --abbrev-ref HEAD
  ci = commit
  cm = commit
  co = checkout
  di = diff
  lg = log --color --graph --abbrev-commit --abbrev=8 --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %C(bold blue)%an %Cgreen%cr%Creset'
  st = status
  unadd = reset HEAD
  untracked = !git status | grep -A999999999 'Untracked files' | cut -sf 2

[branch]
  autosetupmerge = true
[branch "master"]
  remote = <nickname>
  merge = <remote-ref>
  rebase = true

[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[merge]
  conflictstyle = diff3
  keepBackup = false;
  tool = p4mergetool
[mergetool "p4merge"]
  cmd = p4merge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
  keepTemporaries = false
  trustExitCode = false
  keepBackup = false
[mergetool "p4mergetool"]
  cmd = /Applications/p4merge.app/Contents/Resources/launchp4merge $PWD/$BASE $PWD/$REMOTE $PWD/$LOCAL $PWD/$MERGED
  trustExitCode = false
[mergetool]
  keepBackup = false

[log]
  date = local
  stat = true

[push]
  default = current

