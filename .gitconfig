[user]
	name = Alexander
	email = alxndr+github@gmail.com

[core]
	editor = /usr/bin/vim
	excludesfile = ~/.gitignore

[alias]
	co = checkout
	cm = commit
	b = branch
	unadd = reset HEAD
	st = status

[color]
	ui = true
#	branch = auto
#	diff = auto
#	interactive = auto
#	status = auto
#	pull = auto
#	push = auto

[color "branch"]
	current = yellow reverse
	local = yellow 
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

